{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "dimplejariwala/multidocker_client",
            "hostname": "client", 
            "memory": 128,            
            "essential": false            
        },
        {
            "name": "server",
            "image": "dimplejariwala/multidocker_server",
            "hostname": "api", 
            "memory": 128,                       
            "essential": false            
        },
        {
            "name": "worker",
            "image": "dimplejariwala/multidocker_worker",
            "hostname": "worker",      
            "memory": 128,                  
            "essential": false            
        },
        {
            "name": "nginx",
            "image": "dimplejariwala/multidocker_nginx",
            "hostname": "nginx",     
            "memory": 128,                   
            "essential": true,      
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]

        }


    ]
}